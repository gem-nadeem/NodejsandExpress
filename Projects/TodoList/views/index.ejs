                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">About</a>
                    </li>


                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5">
        <form action="/add/todo" method="post" class="d-flex">
            <input type="text" name="todo" id="title" class="form-control" placeholder="Enter Todo">
            <input type="submit" value="Add Todo" class="btn btn-md btn-primary mx-2">
        </form>

        <ul class="list-group my-5">

            <% todo.forEach( todos=>{ %>
                <li class="list-group-item">
                    <%= todos.todo %>
                        <a href="./delte/todo/<%= todos._id%>" class="btn btn-danger bt-sm">Delete Todo</a>

                </li>
                <%}) %>
        </ul>
    </div>


    <%- include("./partials/footer") %>